        public int id;

        public static string CONSTR = "DELETE FROM dbo.MOVIES WHERE Id=@id";

        SqlConnect con = new SqlConnect(CONSTR);
        private object msg;
        private object gvdtl;

        public object getdata(string str)
        {
            SqlConnection con = new SqlConnection(CONSTR);

            con.Open();

            object a;

            SqlCommand cmd = new SqlCommand(str, con);

            a = cmd.ExecuteScalar();

            con.Close();

            return a;
        }

        public void display()
